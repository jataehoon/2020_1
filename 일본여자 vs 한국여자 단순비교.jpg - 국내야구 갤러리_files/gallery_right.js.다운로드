    	});
	}
	
	$('.btn_bluenext, .btn_blueprev', '#right_issuezoom').click(function() {
		_chgIssuezoom($(this).data('page'));
	});
	
	_chgIssuezoom($('#right_issuezoom').data('page'));
}
