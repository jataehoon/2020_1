	        jsonp:"jsoncallback",
	        success:function(data){}
	    });
	}

	$('.btn_bluenext, .btn_blueprev', $('#rightHit .pageing_box').eq(0)).click(function() {
		if(!$('#rightHit .pageing_box').eq(0).data('page')) {
			$('#rightHit .pageing_box').eq(0).data('page', $(this).data('page'));
			loadData();
		}
	});
}

