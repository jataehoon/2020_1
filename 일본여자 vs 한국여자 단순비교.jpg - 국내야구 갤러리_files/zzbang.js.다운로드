/* 
자동 짤방 광고 존재유무 (광고 존재시 adAutoJJ = true)
*/
var adAutoJJ = false;
var zzImgJJ = false;
var zzImgJJ_m = false; //마이너 갤러리 자짤.

$(document).ready(function() {
	/*if(zzImgJJ != true) {
		if(adAutoJJ == true) {
			$('#zzbang_img').remove();
		} else {
			$('#zzbang_ad').remove();
		}
	}*/
	if(zzImgJJ_m) {
		if($('#zzbang_img').html() !== "") {
			if(Math.floor(Math.random() * 3) == 2) {
				$('#zzbang_ad').remove();
			} else {
				if($('#zzbang_ad').html() != undefined && $('#zzbang_ad').html() !== "") {
					$('#zzbang_img').remove();
				}
			}
		}
	} else {
		if(_GALLERY_TYPE_ == 'M') {
			if($('#zzbang_img').html() !== "") {
				if(Math.floor(Math.random() * 3) == 2) {
					$('#zzbang_ad').remove();
				} else {
					if($('#zzbang_ad').html() != undefined && $('#zzbang_ad').html() !== "") {
						$('#zzbang_img').remove();
					}
				}
			}
		} else {
			if(adAutoJJ == true && zzImgJJ == false) $('#zzbang_img').remove();
		}
	}
	$('#zzbang_div').show();

});